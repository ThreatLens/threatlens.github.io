    %section#three-step-process.py-5.border-bottom
      .container.px-5
        .row.gx-5
          #elm-tabs.tabs
        .text-center
          #pseudo-report-demo
            .device-group
              .dashed-vector
                %svg{:viewBox => '0 0 500 300', :preserveAspectRatio => 'none'  }
                  %path{:d => 'M0,0 500,0 500,300 0,300z'}
                .device-group-title Hazardous
                .device
                  .device-top-line
                    .device-rating.red-rating
                    .device-name Linksys EA6350
                  %ul.device-list
                    %li
                      .glowing-dot.red-dot.pulsing
                      .device-list-text Known Remote Code Execution Exploit
                    %li
                      .glowing-dot.yellow-dot
                      .device-list-text Outdated Kernel
                    %li
                      .glowing-dot.yellow-dot
                      .device-list-text No Stack Canaries
            .device
              .device-top-line
                .device-rating.green-rating
                .device-name Belkin D5200
              %ul.device-list
                %li
                  .glowing-dot.green-dot
                  .device-list-text No Known Exploits
                %li
                  .glowing-dot.green-dot
                  .device-list-text Updated Kernel
                %li
                  .glowing-dot.green-dot
                  .device-list-text Stack Canaries and ASLR Enabled
            .device
              .device-top-line
                .device-rating.yellow-rating
                .device-name Logitech F970
              %ul.device-list
                %li
                  .glowing-dot.yellow-dot
                  .device-list-text Known Exploits Though Not Dangerous
                %li
                  .glowing-dot.yellow-dot
                  .device-list-text Stack Canaries Partially Enabled
                %li
                  .glowing-dot.green-dot
                  .device-list-text Updated Kernel
